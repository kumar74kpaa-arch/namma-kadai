rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Admins are just signed-in users for this simple app
    function isAdmin() {
        return isSignedIn();
    }

    match /products/{document=**} {
      // Temporarily open for debugging
      allow read, write: if true;
    }

    match /orders/{orderId} {
      // Allow customers to create their own orders
      allow create: if isSignedIn() && isOwner(request.resource.data.userId);

      // Allow customers to read their own orders
      allow get, list: if isSignedIn() && request.query.where[0] == ['userId', '==', request.auth.uid];

      // Allow admin to read and update any order (e.g., to change status)
      allow list, update: if isAdmin();
      allow get: if isAdmin();
    }
  }
}

service firebase.storage {
  match /b/{bucket}/o {

    // Allow public read on product images for anyone.
    // Allow authenticated users to write (upload) new product images.
    match /products/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Allow an authenticated user to upload their payment screenshot.
    // Allow an authenticated user (the admin) to read the screenshot for verification.
    match /payment_screenshots/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
