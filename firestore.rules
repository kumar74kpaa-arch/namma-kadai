rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Admins are just signed-in users for this simple app
    function isAdmin() {
        return isSignedIn();
    }

    match /products/{productId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    match /orders/{orderId} {
      // Allow customers to create their own orders
      allow create: if isSignedIn() && isOwner(request.resource.data.userId);

      // Allow customers to read their own orders
      allow get, list: if isSignedIn() && isOwner(resource.data.userId);

      // Allow admin to read and update any order (e.g., to change status)
      allow get, list, update: if isAdmin();
    }
  }
}
